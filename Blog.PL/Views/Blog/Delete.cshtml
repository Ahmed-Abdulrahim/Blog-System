@model BlogPost
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<form asp-action="Delete" asp-route-id="@Model.Id">
    <div>
        <label asp-for="Title" class="col-form-label"></label>
        <input asp-for="Title" placeholder="Enter TiTle" class="form-control" readonly />

    </div>
    <div>
        <label asp-for="Content" class="col-form-label"></label>
        <textarea asp-for="Content" placeholder="Enter TiTle" class="form-control" rows="4" readonly></textarea>

    </div>
    <div>
        <label asp-for="PublishedDate" class="col-form-label"></label>
        <input asp-for="PublishedDate" placeholder="Enter TiTle" class="form-control" rows="4" readonly />

    </div>
    <div class="m-2">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Back To List</a>
    </div>
</form>
